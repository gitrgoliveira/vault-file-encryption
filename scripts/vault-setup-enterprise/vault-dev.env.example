# Vault Enterprise Dev Mode Configuration
# Copy this to vault-dev.env and customize if needed

# Vault address (dev mode default)
export VAULT_ADDR="http://127.0.0.1:8200"

# Root token (dev mode, set in 01-start-vault-dev.sh)
export VAULT_DEV_ROOT_TOKEN_ID="dev-root-token"

# For application use after cert authentication
# This is managed by Vault Agent, not needed for direct use
# export VAULT_TOKEN="<obtained-from-cert-auth>"

# Note: In dev mode, no namespace is used (root namespace)
# For production Vault Enterprise with namespaces:
# export VAULT_NAMESPACE="your-namespace"
