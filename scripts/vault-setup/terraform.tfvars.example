# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

vault_address     = "https://vault-cluster-public-vault-xxxxx.hashicorp.cloud:8200"
vault_namespace   = "admin"
transit_mount_path = "transit"
transit_key_name   = "file-encryption-key"
transit_key_type   = "aes256-gcm96"
cert_auth_mount_path = "cert"
app_role_name      = "file-encryptor"
# Certificate authentication configuration
# CN must match the client certificate's Common Name
# Example: file-encryptor.example.local
allowed_common_names = ["file-encryptor.example.local"]
certificate_path   = "../test-certs/ca.crt"
